<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>UploadBlastAndGetCoverageXML</servlet-name>
        <servlet-class>com.era7.bioinfo.blastxviewer7.server.servlet.UploadBlastAndGetCoverageXMLServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadBlastFileFromUrlAndGetCoverageXML</servlet-name>
        <servlet-class>com.era7.bioinfo.blastxviewer7.server.servlet.LoadBlastFileFromUrlAndGetCoverageXMLServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadBlastFileFromUrlAndGetCoverageXML</servlet-name>
        <url-pattern>/LoadBlastFileFromUrlAndGetCoverageXML</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadBlastAndGetCoverageXML</servlet-name>
        <url-pattern>/UploadBlastAndGetCoverageXML</url-pattern>
    </servlet-mapping>    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
